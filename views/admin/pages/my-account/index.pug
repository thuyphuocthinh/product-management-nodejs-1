extend ../../layouts/default.pug

block main 
    .main
        h1 Hồ sơ cá nhân 

        if (user.avatar)
            img(src=user.avatar width="150px" height="150px" class="mb-3")
        else 
            img(src="/admin/images/avatar.png" width="150px" class="mb-3")

        if (user.fullName)
            p Họ tên: <b> #{user.fullName} </b>
            
        if (user.email)
            p Email: <b> #{user.email} </b>
            
        if (user.phone)
            p SĐT: <b> #{user.phone} </b>
            
        p 
            span Trạng thái
            span 
                <b> #{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"} </b>        
        
        if (role.title)
            p Phân quyền: <b> #{role.title} </b>

        a(
            href=`${prefixAdmin}/my-account/edit`
            class="btn btn-primary"
        ) Chỉnh sửa thông tin

