extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    .main 
        if (role.permissions.includes("accounts_edit"))
            h1 Cập nhật hông tin cá nhân 

            +alertSuccess(5000)
            +alertError(5000)

            form(
                action=`${prefixAdmin}/my-account/edit?_method=PATCH`
                method="POST"
                enctype="multipart/form-data"
            )
                div(class="form-group")
                    label(for="fullName") Họ tên *
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        value=user.fullName
                        required
                    )

                div(class="form-group")
                    label(for="email") Email *
                    input(
                        type="text"
                        class="form-control"
                        id="email"
                        name="email"
                        value=user.email
                        required
                    )    

                div(class="form-group")
                    label(for="password") Mật khẩu *
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                    )         

                div(class="form-group")
                    label(for="phone") Số điện thoại 
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value=user.phone
                        required
                    )   

                div(class="form-group" upload-image)
                    label(for="avatar") Avatar 
                    input(
                        type="file"
                        class="form-control"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                        upload-image-input
                    )        
                    img(src=user.avatar width="150px" height="150px" id="preview-thumbnail" upload-image-preview)

                div(class="form-group")
                    button(
                        type="submit"
                    ).btn.btn-primary Sửa