extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    .main 
        h1 Thêm mới tài khoản 

        +alertError(5000)

        form(
            action=`${prefixAdmin}/accounts/create`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                )

            div(class="form-group")
                label(for="email") Email *
                input(
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                )    

            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )         

            div(class="form-group")
                label(for="phone") Số điện thoại 
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                )   

            div(class="form-group" upload-image)
                label(for="avatar") Avatar 
                input(
                    type="file"
                    class="form-control"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                    required
                )        
                img(src="" id="preview-thumbnail" upload-image-preview)

            div(class="form-group")
                label(for="role_id") Phân quyền 
                select(
                    class="form-select"
                    id="role_id"
                    name="role_id"
                    required
                )         
                    option(value="" selected=true disabled=true) -- Chọn -- 
                    each item in roles 
                        option(value=item.id) #{item.title} 
                    
            div(class="form-group")
                input(
                    type="radio"
                    id="active"
                    name="status"
                    value="active"
                    checked=true
                ) 
                label(for="active") Hoạt động 

                input(
                    type="radio"
                    id="inactive"
                    name="status"
                    value="inactive"
                ) 
                label(for="inactive") Dừng hoạt động 

            div(class="form-group")
                button(
                    type="submit"
                ).btn.btn-primary Tạo mới