include ../mixins/sub-menu.pug

header.header.py-4 
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src="/images/logo.svg", alt="Logo")

            .col-9 
                .inner-menu 
                    ul(class="d-flex justify-content-center gap-4 align-items-center") 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct = "/products";
                            a(href="/products") Danh mục Sản phẩm   
                            +sub-menu(layoutProductsCategories, pathProduct)
